<div class="container all">
  <div class="row">
    <div class="col-md-6 offset-md-3 border border-dark form_in">

      <h2 class="start-title text-center">Sign up</h2>

      <div class="row flash text-center text-danger">
        <div class="col-sm-8 offset-sm-2">
          <%= render 'devise/shared/error_messages', resource: resource %>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "dmmtarou", class: "form-control #{"is-invalid" if resource.errors.include?(:name)}" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control #{"is-invalid" if resource.errors.include?(:email)}"  %>
        </div>

        <div class="field">
          <%= f.label :telephone_number %><br />
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "000xxxxxxxx", class: "form-control #{"is-invalid" if resource.errors.include?(:telephone_number)}" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control #{"is-invalid" if resource.errors.include?(:password)}" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-control #{"is-invalid" if resource.errors.include?(:password_confirmation)}" %>
        </div>

        <div class="row mt-4">
          <div class="col-sm-4 offset-sm-4 text-center">
            <span class="btn-border1"><%= f.submit "Sign up", class: "btn" %><br /><i class="fas fa-arrow-alt-circle-right pb-2"></i></span>
          </div>
        </div>

      <% end %>

 <%= render "devise/shared/links" %>

   </div>
  </div>
</div>
