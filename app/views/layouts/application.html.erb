<!DOCTYPE html>
<html>
  <head>
    <title>Portforio1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <%= link_to 'DivIn', root_path, class: "logo navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropDown" aria-controls="navbarNavDropDown" aria-expanded="false" aria-label="Toggle navgation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropDown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to logs_path,  class: "nav-link" do %><i class="fas fa-list"></i><% end %>
                </li>

                <li class="nav-item">
                  <%= link_to new_log_path, class: "nav-link" do %><i class="far fa-plus-square"></i><% end %>
                </li>

                <li class="nav-item">
                  <%= link_to ranks_ranking_path, class: "nav-link" do %><i class="fas fa-award"></i><% end %>
                </li>

                <li class="nav-item">
                  <%= link_to my_page_user_path(current_user.id), class: "nav-link" do %><i class="fas fa-user-circle"></i><% end %>
                </li>

                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %><i class="fas fa-sign-out-alt"></i><% end %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to homes_about_path,  class: "nav-link" do %><i class="fas fa-water"></i><% end %>
                </li>

                <li class="nav-item">
                  <%= link_to logs_path,  class: "nav-link" do %><i class="far fa-list-alt"></i><% end %>
                </li>

                <li class="nav-item">
                  <%= link_to ranks_ranking_path, class: "nav-link" do %><i class="fas fa-award"></i><% end %>
                </li>

                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: "nav-link" do %><i class="fas fa-plus"></i><% end %>
                </li>

                <li class="nav-item">
                  <%= link_to new_user_session_path, class: "nav-link" do %><i class="fas fa-sign-in-alt"></i><% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
