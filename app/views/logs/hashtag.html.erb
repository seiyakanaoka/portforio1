<div class="container all">
  <div class="row">
    </div class="col-sm-10">


    <% unless params[:name] == nil %>
      <div class="row">
        <div class="col-sm-12">
          <% @log.each do |log| %>
            <%= attachment_image_tag log, :log_image, size: "100x100" %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-8 offset-sm-2 hashtag-name">
            <% @hashtags.sort.reverse.each do |count| %>
              <% count[1].each do |hashtag| %>
                <p><%= link_to  "##{hashtag.hashname} (#{hashtag.logs.count}) ä»¶","/log/hashtag/#{hashtag.hashname}",data: {"turbolinks" => false} %>
                </p>
              <% end %>
            <% end %>
          </div>
        </div>
    <% end %>

    </div>
  </div>
</div>