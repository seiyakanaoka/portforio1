<div class="container all">
  <div class="row">
    </div class="col-sm-10">


    <% unless params[:name] == nil %>
      <div class="row mb-5">
        <div class="col-sm-12">
          <% @log.each do |log| %>
            <%= link_to log_path(log.id) do %><%= attachment_image_tag log, :log_image, size: "200x200" %><% end %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-8 offset-sm-2 hashtag-name">
          <% @hashtags.sort.reverse.each do |count| %>
            <% count[1].each do |hashtag| %>
              <%= link_to  "##{hashtag.hashname} (#{hashtag.logs.count}) ä»¶","/log/hashtag/#{hashtag.hashname}",data: {"turbolinks" => false} %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    </div>
  </div>
</div>