<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <% @logs.each do |log| %>
        <div class="logs mb-3">
          <% if log.user != current_user %>
            <%= link_to user_path(log.user_id) do %>
              <%= attachment_image_tag log.user, :profile_image, size: "100x100", class: "rounded-circle" %>
              <%= log.user.name %>
            <% end %><br />
          <% else %>
            <%= link_to my_page_user_path(current_user.id) do %>
              <%= attachment_image_tag current_user, :profile_image, size: "100x100", class: "rounded-circle" %>
              <%= current_user.name %>
            <% end %><br />
          <% end %>

          <span>Diving Pint  <%= log.dive_point %></span><br />

          <% if log.user == current_user %>
            <%= link_to '編集', edit_log_path(log.id), class: "btn btn-success" %><br />
          <% end %>

          <%= link_to log_path(log.id) do %><%= attachment_image_tag log, :log_image, size: "200x200" %><% end %><br />

          <span id="log_<%= log.id %>">
            <%= render 'logs/favo', log: log %>
          </span>

          <i class="far fa-comments"></i><%= log.log_comments.count %>

          <strong><%= log.impressionist_count(:filter=>:session_hash) %>PV</strong><br />

          <%= log.title %><br />
          <%= log.body %>
        </div>
      <% end %>
    </div>

    <div class="col-lg-6">
      サイドバー
    </div>

  </div>
</div>