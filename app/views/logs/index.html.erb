<div class="container">
  <div class="row">
    <div class="col-md-6">
      <% @logs.each do |log| %>
        <div class="logs">
          <%= attachment_image_tag log.user, :profile_image, size: "100x100", class: "rounded-circle" %>
          <%= link_to user_path(log.user_id) do %><%= log.user.name %><% end %><br />
          <span>Diving Pint  <%= log.dive_point %></span><br />
          <% if log.user == current_user %>
            <%= link_to '編集', edit_log_path(log.id), class: "btn btn-success" %><br />
          <% end %>
          <%= link_to log_path(log.id) do %><%= attachment_image_tag log, :log_image, size: "200x200" %><% end %><br />
          <%= log.title %><br />
          <%= log.body %>
        </div>
      <% end %>
    </div>

    <div class="col-md-6">
      サイドバー
    </div>
  </div>
</div>