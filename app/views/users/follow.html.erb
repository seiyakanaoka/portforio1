<div class="container all">
  <div class="row mt-5">
    <div class="col-lg-6 offset-md-3">

      <div class="row">
        <div class="col-sm-6 offset-sm-3 text-center">
          <h2>follow</h2>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-10 offset-sm-1 text-center">
          <% @follow.each do |follow| %>
            <%= link_to user_path(follow.id), class: "text-dark" do %>
              <%= attachment_image_tag follow, :profile_image, size: "50x50", class: "rounded-circle" %>
              <% if follow.nick_name %>
                <span><strong><%= follow.nick_name %></strong><small> by  <%= follow.name %></small></span>
              <% else %>
                <%= follow.name %>
              <% end %>
            <% end %>

            <% if current_user != follow %>
              <span class="ml-2" id="follow_<%= follow.id %>">
                <%= render 'relationships/follow', user: follow %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>