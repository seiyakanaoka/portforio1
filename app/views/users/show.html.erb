<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= attachment_image_tag @user, :profile_image, size: "100x100" %>
    </div>
    <div class="col-md-6">
      <%= @user.nick_name %><br />
      <small><%= @user.name %></small>
      <p>フォロー数</p>
      <p>フォロワー数</p>
    </div>
  </div>

  <div class="row">
    <%= @user.introduction %>
  </div>

  <div class="row">
    <% if current_user %>
      <%= link_to 'プロフィール編集', edit_user_path(@user.id), class: "btn btn-success" %>
    <% end %>
  </div>

  <div class="row">
    <%= link_to 'ダイブプロフィール', users_dive_profile_path(@user.id), class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @user.logs.each do |user_log| %>
      <div class="col-md-4">
        <%= link_to log_path(@user.id) do %><%= attachment_image_tag user_log, :log_image, size: "100x100" %><% end %>
      </div>
    <% end %>
  </div>

</div>