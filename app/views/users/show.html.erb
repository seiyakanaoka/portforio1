<div class="container all">
  <div class="row mt-5">
    <div class="col-sm-10 mx-auto">

      <div class="row">
        <div class="col-lg-6 text-center mx-auto mt-3 pt-5">
          <%= attachment_image_tag @user, :profile_image, size: "230x230", class: "rounded-circle" %><br />
        </div>

        <div class="col-lg-5 mt-5 text-dark">
          <div class="name mb-3">
            <% if @user.nick_name %>
              <span class="h3"><%= @user.nick_name %></span>
              <small>by  <%= @user.name %></small><br />
            <% else %>
              <%= @user.name %>
            <% end %>
          </div>

          <div class="name mb-3">
            <%= @user.introduction %>
          </div>

          <div class="follow-follower mb-3">
            <span class="follow_count_<%= @user.id %> mr-2">
              <%= link_to follow_user_path(@user), class: "text-dark" do %><%= @user.follower.count %>フォロー<% end %>
            </span>

            <span class="follower_count_<%= @user.id %>">
              <%= link_to follower_user_path(@user), class: "text-dark" do %><%= @user.followed.count %>フォロワー<% end %><br />
            </span>
          </div>

          <div class="follow-btn">
            <% if current_user != @user %>
              <span id="follow_<%= @user.id %>">
                <%= render 'relationships/follow', user: @user %>
              </span>
            <% end %>
          </div>

          <div class="profile mt-3 mb-3">
            <%= link_to dive_profile_user_path(@user.id), class: "btn btn-outline-secondary" do %><i class="far fa-file-alt"></i> Diving Profile<% end %>
          </div>

          <div class="message">
            <% unless @user == current_user %>
              <% if @isRoom == true %>
                <%= link_to room_path(@roomid), class: "btn btn-outline-secondary" do %><i class="fas fa-envelope"></i> メッセージを送信<% end %>
              <% else %>
                <%= form_with model: @room, url: rooms_path, method: :post, local: true do |f| %>
                  <%= fields_for @entry do |e| %>
                    <%= e.hidden_field :user_id, value: @user.id%>
                  <% end %>
                  <%= f.submit 'メッセージを始める', class: "btn btn-outline-secondary" do %><i class="fas fa-envelope"></i><% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
      </div>
    </div>

    <h1 class="logo text-center mt-5"><%= @user.nick_name %> Memories</h1>
    <% unless @user.logs.empty? %>
      <div class="row mt-5 border border-light shadow-lg" style="background: #DEF3F7;">
        <% @user.logs.reverse.each do |user_log| %>
          <div class="col-lg-4 mt-5 mb-5 text-center user-memory img-fluid">
            <%= user_log.created_at.strftime('%Y/%m/%d') %><br />
            <%= link_to log_path(user_log.id) do %><%= attachment_image_tag user_log, :log_image, size: "240x240" %><% end %>
          </div>
        <% end %>
      </div>
    <% else%>
      <div></div>
    <% end %>

</div>