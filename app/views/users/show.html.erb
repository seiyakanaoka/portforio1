<div class="container">
  <div class="row mt-5">
    <div class="col-sm-10 mx-auto">

      <div class="row">
        <div class="col-lg-6 text-center mx-auto mt-3">
          <%= attachment_image_tag @user, :profile_image, size: "230x230", class: "rounded-circle" %><br />
        </div>

        <div class="col-lg-5 mt-5">
          <div class="name mb-3">
            <% if @user.nick_name %>
              <span class="h3"><%= @user.nick_name %></span>
              <small>by  <%= @user.name %></small><br />
            <% else %>
              <%= @user.name %>
            <% end %>
          </div>

          <div class="name mb-3">
            <%= @user.introduction %>
          </div>

          <div class="follow-follower mb-3">
            <span class="follow">
              <%= link_to follow_user_path(@user) do %><%= current_user.follower.count %>フォロー<% end %>
            </span>

            <span class="follower">
              <%= link_to follower_user_path(@user) do %><%= current_user.followed.count %>フォロワー<% end %><br />
            </span>
          </div>

          <div class="follow-btn">
            <% if current_user != @user %>
              <span id="follow_<%= @user.id %>">
                <%= render 'relationships/follow', user: @user %>
              </span>
            <% end %>
          </div>

          <div class="profile mt-3 mb-3">
            <%= link_to 'ダイブプロフィール', dive_profile_user_path(@user.id), class: "btn btn-primary" %>
          </div>

          <div class="message">
            <% unless @user == current_user %>
              <% if @isRoom == true %>
                <%= link_to 'チャットへ', room_path(@roomid) %>
              <% else %>
                <%= form_with model: @room, url: rooms_path, method: :post, local: true do |f| %>
                  <%= fields_for @entry do |e| %>
                    <%= e.hidden_field :user_id, value: @user.id%>
                  <% end %>
                  <%= f.submit 'チャットを始める', class: "btn btn-primary" %>
                <% end %>
              <% end %>
            <% end %>
          </div>
    </div>
  </div>

  <div class="row mt-5 border-top border-dark">
    <% @user.logs.each do |user_log| %>
      <div class="col-lg-4 mt-5 text-center img-fluid">
        <%= link_to log_path(user_log.id) do %><%= attachment_image_tag user_log, :log_image, size: "260x260" %><% end %>
      </div>
    <% end %>
  </div>

</div>