<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <%= attachment_image_tag @user, :profile_image, size: "100x100", class: "rounded-circle" %>
      <% if @user.nick_name %>
        <%= @user.nick_name %><br />
        <small>by  <%= @user.name %></small>
      <% else %>
        <%= @user.name %>
      <% end %>
      <%= @user.introduction %>
    </div>

    <div class="col-lg-6">
      <%= link_to 'ダイブプロフィール', dive_profile_user_path(@user.id), class: "btn btn-primary" %><br />

      <span id="follow_count_<%= @user.id %>">
        <%= link_to follow_user_path(@user) do %>フォロー<%= @user.follower.count %><% end %>
      </span><br />

      <span id="follower_count_<%= @user.id %>">
        <%= link_to follower_user_path(@user) do %>フォロワー<%= @user.followed.count %><% end %>
      </span><br />

      <% if current_user != @user %>
        <span id="follow_<%= @user.id %>">
          <%= render 'relationships/follow', user: @user %><br />
        </span>
      <% end %>

    <% unless @user == current_user %>
      <% if @isRoom == true %>
        <%= link_to 'チャットへ', room_path(@roomid) %>
      <% else %>
        <%= form_with model: @room, url: rooms_path, method: :post, local: true do |f| %>
          <%= fields_for @entry do |e| %>
            <%= e.hidden_field :user_id, value: @user.id%>
          <% end %>
          <%= f.submit 'チャットを始める', class: "btn btn-primary" %>
        <% end %>
      <% end %>
    <% end %>
    </div>
  </div>

  <div class="row">
    <% @user.logs.each do |user_log| %>
      <div class="col-lg-4 mt-5">
        <%= link_to log_path(user_log.id) do %><%= attachment_image_tag user_log, :log_image, size: "300x300" %><% end %>
      </div>
    <% end %>
  </div>

</div>