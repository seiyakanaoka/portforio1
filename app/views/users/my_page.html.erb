<div class="container">
  <div class="row mt-5">
    <div class="col-lg-5 text-center mx-auto">
      <%= attachment_image_tag @user, :profile_image, size: "200x200", class: "rounded-circle" %><br />
      <% if @user.nick_name %>
        <span class="h3"><%= @user.nick_name %></span>
        <small>by  <%= @user.name %></small><br />
      <% else %>
        <%= @user.name %>
      <% end %>
      <%= @user.introduction %>
    </div>

    <div class="col-lg-4 mt-5 mx-auto">
      <span class="follow text-center"><%= link_to follow_user_path(@user) do %><%= current_user.follower.count %><br />フォロー<% end %></span><br />
      <span class="follower text-center"><%= link_to follower_user_path(@user) do %><%= current_user.followed.count %><br />フォロワー<% end %></span><br />
      <% if @user == current_user %>
        <%= link_to 'プロフィール編集', edit_user_path(@user.id), class: "btn btn-success" %><br />
      <% end %>
      <%= link_to 'ダイブプロフィール', dive_profile_user_path(@user.id), class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <% @user.logs.each do |user_log| %>
      <div class="col-lg-4 mt-5 text-center img-fluid">
        <%= link_to log_path(user_log.id) do %><%= attachment_image_tag user_log, :log_image, size: "300x300" %><% end %>
      </div>
    <% end %>
  </div>

</div>