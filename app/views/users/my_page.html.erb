<div class="container all">
  <div class="row mt-5">
    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 mx-auto">

      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center mx-auto pt-5">
          <%= attachment_image_tag @user, :profile_image, size: "300x300", class: "rounded-circle" %><br />
        </div>

        <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5 mt-4 text-dark">
          <div class="name mb-3">
            <% if @user.nick_name %>
              <span class="h3"><%= @user.nick_name %></span>
              <small>by  <%= @user.name %></small><br />
            <% else %>
              <%= @user.name %>
            <% end %>
          </div>

          <div class="name mb-3">
            <%= @user.introduction %>
          </div>

          <div class="log_count">
            <p>投稿数　<%= @user.logs.count %></p>
          </div>

          <div class="follow-follower mb-3">
            <span class="follow">
              <%= link_to follow_user_path(@user), class: "text-dark" do %><%= current_user.follower.count %>フォロー<% end %>
            </span>

            <span class="follower">
              <%= link_to follower_user_path(@user), class: "text-dark" do %><%= current_user.followed.count %>フォロワー<% end %><br />
            </span>
          </div>

          <div class="profile mb-3">
            <p><%= link_to dive_profile_user_path(@user.id), class: "btn btn-outline-secondary" do %><i class="far fa-file-alt"></i> Diving Profile<% end %></p>
            <% if @user == current_user %>
              <p><%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary" do %><i class="fas fa-user-cog"></i> Edit Profile<% end %></p>
              <p><%= link_to bookmark_list_user_path(@user.id), class: "btn btn-outline-secondary" do %><i class="fas fa-bookmark"></i> Bookmark List<% end %></p>
            <% end %>
          </div>
        </div>
      </div>
      <h1 class="logo text-center mt-5">My Memories</h1>
      <%= render 'show', user: @user %>
    </div>
  </div>
</div>




