<div class="container">
  <div class="row mt-5">
    <div class="col-sm-10 mx-auto">

      <div class="row">
        <div class="col-lg-6 text-center mx-auto mt-3">
          <%= attachment_image_tag @user, :profile_image, size: "230x230", class: "rounded-circle" %><br />
        </div>

        <div class="col-lg-5 mt-5">
          <div class="name mb-3">
            <% if @user.nick_name %>
              <span class="h3"><%= @user.nick_name %></span>
              <small>by  <%= @user.name %></small><br />
            <% else %>
              <%= @user.name %>
            <% end %>
          </div>

          <div class="name mb-3">
            <%= @user.introduction %>
          </div>

          <div class="follow-follower mb-3">
            <span class="follow">
              <%= link_to follow_user_path(@user) do %><%= current_user.follower.count %>follow<% end %>
            </span>

            <span class="follower text-light">
              <%= link_to follower_user_path(@user) do %><%= current_user.followed.count %>follower<% end %><br />
            </span>
          </div>

          <div class="profile mb-3">
            <% if @user == current_user %>
              <%= link_to 'Profile Edit', edit_user_path(@user.id), class: "btn btn-success" %>
            <% end %>
            <%= link_to 'Diving Profile', dive_profile_user_path(@user.id), class: "btn btn-primary" %>
          </div>

        </div>
      </div>


      <div class="row mt-5 border-top border-dark">
        <% @user.logs.each do |user_log| %>
          <div class="col-lg-4 mt-5 text-center img-fluid">
            <%= link_to log_path(user_log.id) do %><%= attachment_image_tag user_log, :log_image, size: "260x260" %><% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>