<div class="container all">
  <div class="row mt-5">
    <div class="col-sm-10 mx-auto">

      <div class="row pt-5 text-dark pb-5">
        <div class="col-lg-6 text-center mx-auto mt-3">
          <%= attachment_image_tag @user, :profile_image, size: "230x230", class: "rounded-circle" %><br />
        </div>

        <div class="col-lg-5 mt-4">
          <div class="name mb-3">
            <% if @user.nick_name %>
              <span class="h3"><%= @user.nick_name %></span>
              <small>by  <%= @user.name %></small><br />
            <% else %>
              <%= @user.name %>
            <% end %>
          </div>

          <div class="name mb-3">
            <%= @user.introduction %>
          </div>

          <div class="log_count">
            <p>投稿数　<%= @user.logs.count %></p>
          </div>

          <div class="follow-follower mb-3">
            <span class="follow">
              <%= link_to follow_user_path(@user), class: "text-dark" do %><%= current_user.follower.count %>フォロー<% end %>
            </span>

            <span class="follower">
              <%= link_to follower_user_path(@user), class: "text-dark" do %><%= current_user.followed.count %>フォロワー<% end %><br />
            </span>
          </div>

          <div class="profile mb-3">
            <% if @user == current_user %>
              <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary mr-3" do %><i class="fas fa-user-cog"></i> Edit Profile<% end %>
            <% end %>
            <%= link_to dive_profile_user_path(@user.id), class: "btn btn-outline-secondary" do %><i class="far fa-file-alt"></i> Diving Profile<% end %>
          </div>

        </div>
      </div>

      <h1 class="logo text-center mt-5">My Memories</h1>

      <% unless @user.logs.empty? %>
        <div class="row mt-5 border border-light shadow-lg" style="background: #DEF3F7;">
          <% @user.logs.reverse.each do |user_log| %>
            <div class="col-lg-4 mt-5 mb-5 text-center user-memory img-fluid">
              <%= user_log.created_at.strftime('%Y/%m/%d') %><br />
              <%= link_to log_path(user_log.id) do %><%= attachment_image_tag user_log, :log_image, size: "240x240" %><% end %>
            </div>
          <% end %>
        </div>
      <% else%>
        <div></div>
      <% end %>

    </div>
  </div>
</div>