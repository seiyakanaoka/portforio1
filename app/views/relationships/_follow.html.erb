<% if current_user.following?(user) %>
  <%= link_to user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-outline-secondary" do %><i class="fas fa-user-alt"></i> フォロー中<% end %><br />
<% else %>
  <%= link_to user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-outline-secondary" do %><i class="fas fa-user-alt"></i> フォローする<% end %><br />
<% end %>