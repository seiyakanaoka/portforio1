<div class="container">
  <h1>DM</h1>
  <div class="row">
    <div class="col-md-12">
      <div class="message">
        <% if @message.present? %>
          <% @messages.each do |message| %>
            <%= message.content %><small><%= message.user.name %></small><br />
          <% end %>
          <% else %>
          <h1>メッセージはまだありません</h1>
        <% end %>
      </div>

      <div class="new-message">
        <%= form_with model: @message, url: messages_path, method: :post, local: true do |f| %>
          <%= f.text_field :content, class: "form-control"%>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit '送信', class: "btn btn-success" %>
        <% end %>
      </div>

      <%= link_to '一覧画面へ戻る', logs_path, class: "btn btn-primary" %>

    </div>
  </div>
</div>

