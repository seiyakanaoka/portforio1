<div class="container all">
  <div class="row">
    <div class="col-sm-10">
      <div class="row mb-5">
        <div class="col-sm-8 offset-sm-2">
          <span class="dm_host_user"><%= link_to logs_path, class: "text-dark" do %><i class="fas fa-chevron-left"></i><% end %>　  <strong><%= current_user.nick_name %></strong></th>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-10 offset-sm-1">

          <table class="table table-border-bottom dm_list">
            <tbody>
              <% @anotherEntries.includes(:room).each do |e, index| %>
                <tr>
                  <td>
                    <%= link_to user_path(e.user_id), class: "text-dark" do %>
                      <%= attachment_image_tag e.user, :profile_image, size: "50x50", class: "rounded-circle" %>
                      <span class="dm_user ml-2"><strong><%= e.user.name %></strong></span>
                    <% end %>
                    <%= link_to room_path(e.room), class: 'btn btn-success ml-4' do %><span class="dm_user_room">メッセージを送る</span><% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>